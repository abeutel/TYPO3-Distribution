{
    "name": "helhum/typo3-distribution",
    "description" : "TYPO3 CMS Distribution with console and .env support",
    "license": "GPL-2.0+",
    "require": {
        "typo3/cms": "dev-master as 8.4",
        "helhum/typo3-console": "^4.0",
        "helhum/dotenv-connector": "^1.0.0",
        "helhum/config-loader": "^0.1",

        "typo3/cms-belog": "^8.4",
        "typo3/cms-beuser": "^8.4",
        "typo3/cms-context-help": "^8.4",
        "typo3/cms-fluid-styled-content": "^8.4",
        "typo3/cms-felogin": "^8.4",
        "typo3/cms-filelist": "^8.4",
        "typo3/cms-impexp": "^8.4",
        "typo3/cms-info": "^8.4",
        "typo3/cms-info-pagetsconfig": "^8.4",
        "typo3/cms-lowlevel": "^8.4",
        "typo3/cms-reports": "^8.4",
        "typo3/cms-rsaauth": "^8.4",
        "typo3/cms-rtehtmlarea": "^8.4",
        "typo3/cms-setup": "^8.4",
        "typo3/cms-tstemplate": "^8.4",
        "typo3/cms-viewpage": "^8.4"
    },
    "autoload": {
        "psr-4": {
            "Helhum\\TYPO3\\Distribution\\": "src"
        }
    },
    "scripts": {
        "package-states": [
            "vendor/bin/typo3cms install:generatepackagestates"
        ],
        "folder-structure": [
            "vendor/bin/typo3cms install:fixfolderstructure"
        ],
        "pre-deploy": [
            "# Scripts here will be executed by Surf after composer install"
        ],
        "post-autoload-dump": [
            "@package-states",
            "@folder-structure"
        ]
    },
    "extra": {
        "helhum/typo3-console": {
            "install-extension-dummy": false
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": "web"
        },
        "helhum/dotenv-connector": {
            "cache-dir": "var/cache"
        }
    }
}
